---
import '../styles/global.css';
import Navigation from '../components/global/layout/Navigation.astro';
import Footer from '../components/global/layout/Footer.astro';
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>我的博客 - Astro + Vue.js</title>
		<meta name="description" content="使用 Astro 和 Vue.js 构建的现代博客" />
	</head>
	<body class="min-h-screen bg-gray-50">
		<Navigation />
		<main class="flex-grow">
			<slot />
		</main>
    <Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
