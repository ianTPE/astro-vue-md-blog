---
export interface Props {
  title: string;
  description?: string;
  date: string;
  tags?: string[];
  author?: string;
  image?: string;
}

const { title, description, date, tags = [], author, image } = Astro.props;

// 格式化日期
const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    weekday: 'long'
  });
};
---

<article class="max-w-4xl mx-auto px-4 py-8">
  <!-- 返回博客列表 -->
  <nav class="mb-8">
    <a 
      href="/blog" 
      class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors"
    >
      ← 返回博客
    </a>
  </nav>

  <!-- 文章头部 -->
  <header class="mb-8">
    <!-- 文章图片 -->
    {image && (
      <div class="aspect-video overflow-hidden rounded-lg mb-6">
        <img 
          src={image} 
          alt={title} 
          class="w-full h-full object-cover"
        />
      </div>
    )}

    <!-- 文章标题 -->
    <h1 class="text-4xl font-bold text-gray-900 mb-4">{title}</h1>
    
    <!-- 文章描述 -->
    {description && (
      <p class="text-xl text-gray-600 mb-6">{description}</p>
    )}
    
    <!-- 文章元信息 -->
    <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 border-b border-gray-200 pb-4">
      <!-- 发布日期 -->
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
        </svg>
        <time datetime={date}>{formatDate(date)}</time>
      </div>
      
      <!-- 作者 -->
      {author && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
          </svg>
          <span>{author}</span>
        </div>
      )}
    </div>

    <!-- 标签 -->
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-4">
        {tags.map((tag) => (
          <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">
            #{tag}
          </span>
        ))}
      </div>
    )}
  </header>

  <!-- 文章内容 -->
  <div class="prose prose-lg max-w-none">
    <slot />
  </div>

  <!-- 文章底部 -->
  <footer class="mt-12 pt-8 border-t border-gray-200">
    <div class="flex justify-between items-center">
      <a 
        href="/blog" 
        class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors"
      >
        ← 返回博客列表
      </a>
      
      <!-- 分享按钮 -->
      <div class="flex gap-2">
        <button 
          onclick="navigator.share && navigator.share({title: document.title, url: window.location.href})"
          class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors"
        >
          分享文章
        </button>
      </div>
    </div>
  </footer>
</article>

<style>
  .prose {
    @apply text-gray-800 leading-relaxed;
  }
  
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    @apply font-bold text-gray-900 mt-8 mb-4;
  }
  
  .prose h2 {
    @apply text-2xl;
  }
  
  .prose h3 {
    @apply text-xl;
  }
  
  .prose p {
    @apply mb-4;
  }
  
  .prose code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm;
  }
  
  .prose pre {
    @apply bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto;
  }
  
  .prose blockquote {
    @apply border-l-4 border-blue-500 pl-4 italic text-gray-600;
  }
  
  .prose ul,
  .prose ol {
    @apply mb-4 ml-6;
  }
  
  .prose li {
    @apply mb-2;
  }
</style>
